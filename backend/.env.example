# Database Configuration
# For Neon PostgreSQL, use this format (IMPORTANT: Use ssl=require NOT sslmode=require):
# DATABASE_URL=postgresql+asyncpg://user:password@your-host.neon.tech/dbname?ssl=require
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/todoapp

# JWT Configuration
# IMPORTANT: Generate a strong secret key with: openssl rand -base64 32
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters-required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME=Todo Web Application
APP_VERSION=1.0.0
DEBUG=False

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Phase 3: AI Chatbot Configuration
# Gemini API key from https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash

# MCP Server Configuration
# FastMCP HTTP transport serves at root path (no /mcp suffix)
# For Docker Compose: use http://mcp-server:8001
MCP_SERVER_URL=http://localhost:8001
MCP_SERVER_PORT=8001

# Better Auth Configuration (Phase 2)
BETTER_AUTH_SECRET=your-better-auth-secret-key
